@model IEnumerable<ThuPointOfSaleFinal.Entities.Models.Product>
@foreach (var item in Model) 
{
<div class="col-md-4">
    <div class="card mb-2">
        <div calss="card-header">
                <h4>@item.ProductName</h4>
                <h6>Category : @item.category.CategoryName // Price : @item.DefaultPrice</h6>
        </div>
        <div class="card-body">
                @if (item.ProductImage == null || item.ProductImage == "")
            {
                <img src="\Images\ProductImages\Noimage.jpg" alt="No Image" width="100%" height="200px" />
            }
            else
            {
                    <img src="@item.ProductImage" alt="No Image" width="100%" height="200px" />
            }
        </div>
        <div class="card-footer text-center">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>
}